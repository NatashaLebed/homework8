{% extends "AcmeGuestbookBundle::layout.html.twig" %}

{% block title "Welcome " %}

 {% block content %}

     <div id="wrap">
         <div class="container">
             <div class="alert alert-success">
                 <h1>Posts</h1>
             </div>
         </div>
     </div>

     <div class="container">

         <div class="row row-offcanvas row-offcanvas-right">

             <div class="col-xs-12 col-sm-9">
                 <p class="pull-right visible-xs">
                     <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
                 </p>

                 <div class="row">

                     {% for post in posts %}

                         <div class="col-6 col-sm-6 col-lg-4">
                             <h3>{{ post.User }}</h3>
                             <p><h5> {{ post.Message }}</h5></p>
                             <p><a class="btn btn-success" href="{{ path('acme_guestbook_addPost') }}"
                                   role="button">Add comment &raquo;</a></p>
                         </div><!--/span-->

                     {% endfor %}

                 </div><!--/row-->
             </div><!--/span-->


         </div><!--/row-->

         <div class="pagerfanta">
             {{ pagerfanta(posts) }}
         </div>

     </div><!--/.container-->




 {% endblock %}
